%h1=_('eMail Configuration')

- render_region :top do |top|
  - top.help_text do
    %p=_('The “eMail Config” page part is where the email configuration parameters are set.')

%table#snippets.index{:cellspacing=>"0", :border=>"0", :cellpadding=>"0"}
  %thead
    %tr
      - render_region :thead do |thead|
        - thead.title_header do
          %th.snippet=_('eMails')
        - thead.modify_header do
          %th.modify=_('Modify')
  %tbody
    - @smers.each do |smer|
      %tr.node.level-1
        - render_region :tbody do |tbody|
          - tbody.title_cell do
            %td.smer
              = image('smer', :alt => 'smer-icon')
              %span= link_to smer.subject, smer_edit_url(:id => smer)
          - tbody.modify_cell do
            %td.remove
              = link_to image('remove', :alt => _('Remove eMail')), smer_remove_url(:id => smer)

- render_region :bottom do |bottom|
  - bottom.new_button do
    %p
      = link_to image('new-smer', :alt => _('New eMail')), smer_new_url
